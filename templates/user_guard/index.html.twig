{% extends 'base.html.twig' %}

{% block title %}UserGuard index{% endblock %}

{% block body %}
    <h1>UserGuard index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user_guard in user_guards %}
            <tr>
                <td>{{ user_guard.id }}</td>
                <td>{{ user_guard.email }}</td>
                <td>{{ user_guard.roles ? user_guard.roles|json_encode : '' }}</td>
                <td>{{ user_guard.password }}</td>
                <td>
                    <a href="{{ path('app_user_guard_show', {'id': user_guard.id}) }}">show</a>
                    <a href="{{ path('app_user_guard_edit', {'id': user_guard.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_guard_new') }}">Create new</a>
{% endblock %}
