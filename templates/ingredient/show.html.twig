{% extends 'base.html.twig' %}

{% block title %}Ingredient Details{% endblock %}

{% block body %}
    <h1>Ingredient Details</h1>

    <table class="table">
        <tr>
            <th>Id</th>
            <td>{{ ingredient.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ ingredient.nom }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>
                
                <img src="{{ ingredient.image }}" alt="{{ ingredient.nom }}" style="max-width: 200px; height: auto;">
            </td>
        </tr>
    </table>

    <a href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}">Edit</a>
    <a href="{{ path('app_ingredient_index') }}">Back to list</a>
{% endblock %}
