{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <h1>Recette</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recette.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recette.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recette.description|raw }}</td>
